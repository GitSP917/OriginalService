<h1>スレッド作成ページ</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@thread) do |f| %>
      <div class="form-group">
        <%= f.label :title, 'Name' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      
      <%= f.submit '作成', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>